@{
    ViewData["Title"] = "首頁";
    Layout = null; // 同样禁用默认布局，保持风格统一
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <style>
        /*导航栏样式，和登录页保持一致*/
        .top-bar {
            background-color: #343a40;
            color: white;
            padding: 10px 20px;
            display: flex;
            align-items: center;
        }

            .top-bar h1 {
                font-size: 18px;
                margin: 0;
                font-weight: normal;
            }

            .top-bar nav {
                margin-left: 20px;
            }

                .top-bar nav a {
                    color: white;
                    text-decoration: none;
                    margin: 0 10px;
                    font-size: 14px;
                }

        .content {
            text-align: center;
            margin-top: 100px;
        }

        .logout-btn {
            display: inline-block;
            padding: 8px 16px;
            background-color: #dc3545;
            color: white;
            text-decoration: none;
            border-radius: 4px;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <!-- 顶部导航栏，和登录页保持一致 -->
    <div class="top-bar">
        <h1>IDC巡檢系統</h1>
        <nav>
            <a href="#">系統管理</a>
            <a href="@Url.Action("Logout", "Account")">首頁</a>
            <a href="@Url.Action("Logout", "Account")">退出登入</a>
        </nav>
    </div>

    <!-- 首页内容 -->
    <div class="content">
        <h1>Welcome</h1>
        <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
        <!-- 退出登录按钮 -->
        <a href="@Url.Action("Logout", "Account")" class="logout-btn">退出登录</a>
    </div>

    <!-- 页脚 -->
    <div class="footer" style="text-align: center; margin-top: 50px; font-size: 12px; color: #666;">
        © 2026 - IDC巡檢系統 - <a href="#" style="color: #007bff; text-decoration: none;">Privacy</a>
    </div>
</body>
</html>