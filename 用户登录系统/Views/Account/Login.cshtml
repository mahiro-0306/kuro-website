@{
    ViewData["Title"] = "系統登入";
    Layout = null; // 禁用默认布局，消除重复导航栏
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            background-color: #ffffff;
        }

        .top-bar {
            background-color: #343a40;
            color: white;
            padding: 10px 20px;
            display: flex;
            align-items: center;
        }

            .top-bar h1 {
                font-size: 20px;
                margin: 0;
                font-weight: normal;
            }

            .top-bar nav {
                margin-left: 20px;
            }

                .top-bar nav a {
                    color: white;
                    text-decoration: none;
                    margin: 0 10px;
                    font-size: 14px;
                }

        .login-container {
            width: 90%;
            max-width: 400px
            margin: 60px auto;
            border: 1px solid #e0e0e0;
            padding: 0;
            box-sizing: border-box;
        }

        .login-header {
            background-color: #007bff;
            color: white;
            text-align: center;
            padding: 12px 0;
            font-size: 18px;
            font-weight: bold;
        }

        .login-form {
            padding: 30px;
        }

        .form-group {
            margin-bottom: 18px;
        }

            .form-group label {
                display: block;
                margin-bottom: 6px;
                font-size: 14px;
                color: #333;
            }

            .form-group input {
                width: 100%;
                padding: 8px 10px;
                border: 1px solid #ced4da;
                border-radius: 0;
                box-sizing: border-box;
                font-size: 14px;
            }

        .captcha-group {
            display: flex;
            gap: 10px;
        }

            .captcha-group input {
                flex: 1;
            }

        .captcha-img {
            width: 120px;
            height: 38px;
            background-color: #f8f9fa;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 18px;
            font-weight: bold;
            letter-spacing: 3px;
            color: #28a745;
        }

        .remember-group {
            margin-bottom: 20px;
            font-size: 14px;
        }

        .login-btn {
            width: 100%;
            background-color: #007bff;
            color: white;
            border: none;
            padding: 10px 0;
            font-size: 14px;
            cursor: pointer;
        }

        .register-link {
            text-align: center;
            margin-top: 15px;
            font-size: 13px;
            color: #666;
        }

            .register-link a {
                color: #007bff;
                text-decoration: none;
            }

        .footer {
            text-align: center;
            margin-top: 50px;
            font-size: 12px;
            color: #666;
        }
    </style>
</head>
<body>
    <!-- 顶部导航栏：修正“首頁”链接，指向登录界面 -->
    <div class="top-bar">
        <h1>IDC巡檢系統</h1>
        <nav>
            <a href="#">系統管理</a>
            <!-- 核心修改：@Url.Action("Login", "Account") 确保点击首頁回到登录页 -->
            <a href="@Url.Action("Login", "Account")">首頁</a>
        </nav>
    </div>

    <!-- 登录表单容器 -->
    <div class="login-container">
        <div class="login-header">系統登入</div>
        <div class="login-form">
            <form method="post">
                <!-- 用户名 -->
                <div class="form-group">
                    <label>使用者名稱</label>
                    <input type="text" id="userName" name="userName" placeholder="請輸入使用者名稱" required>
                </div>

                <!-- 密码 -->
                <div class="form-group">
                    <label>密碼</label>
                    <input type="password" id="password" name="password" placeholder="請輸入密碼" required>
                </div>

                <!-- 验证码 -->
                <div class="form-group captcha-group">
                    <label>驗證碼</label>
                    <input type="text" name="code" placeholder="請輸入驗證碼" required>
                    <div class="captcha-img">JkMOB6</div>
                </div>

                <!-- 记住我 -->
                <div class="remember-group">
                    <input type="checkbox" id="remember" name="remember" value="true">
                    <label for="remember">記住我</label>
                </div>

                <!-- 错误提示 -->
                @if (!string.IsNullOrEmpty(ViewBag.ErrorMsg))
                {
                    <div style="color: red; font-size: 13px; margin-bottom: 15px; text-align: center;">
                        @ViewBag.ErrorMsg
                    </div>
                }

                <!-- 登录按钮 -->
                <button type="submit" class="login-btn">登入</button>

                <!-- 注册链接 -->
                <div class="register-link">
                    還沒有賬號？<a href="@Url.Action("Register", "Account")">點擊註冊</a>
                </div>
            </form>
        </div>
    </div>

    <!-- 页脚 -->
    <div class="footer">
        © 2026 - IDC巡檢系統 - <a href="#" style="color: #007bff; text-decoration: none;">Privacy</a>
    </div>
    <!-- 必须放在</body>标签前面，完整保留 -->
    <script>
        // 1. 读取Cookie的函数
        function getCookie(name) {
            var cookies = document.cookie.split('; ');
            for (var i = 0; i < cookies.length; i++) {
                var cookie = cookies[i].split('=');
                if (cookie[0] === name) {
                    return decodeURIComponent(cookie[1]);
                }
            }
            return null;
        }

        // 2. 页面加载后自动填充
        window.onload = function () {
            var savedUserName = getCookie("SavedUserName");
            var savedPassword = getCookie("SavedPassword");
            var rememberMe = getCookie("RememberMe");

            if (savedUserName) {
                document.getElementById("userName").value = savedUserName;
            }
            if (savedPassword) {
                document.getElementById("password").value = savedPassword;
            }
            if (rememberMe === "true") {
                document.getElementById("remember").checked = true;
            }
        };
    </script>
</body>
</html>