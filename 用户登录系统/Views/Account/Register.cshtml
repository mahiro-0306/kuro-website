@{
    ViewData["Title"] = "用戶註冊";
    Layout = null; // 禁用默认布局，消除重复导航栏
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            background-color: #ffffff;
        }

        .top-bar {
            background-color: #343a40;
            color: white;
            padding: 10px 20px;
            display: flex;
            align-items: center;
        }

            .top-bar h1 {
                font-size: 18px;
                margin: 0;
                font-weight: normal;
            }

            .top-bar nav {
                margin-left: 20px;
            }

                .top-bar nav a {
                    color: white;
                    text-decoration: none;
                    margin: 0 10px;
                    font-size: 14px;
                }

        .register-container {
            width: 420px;
            margin: 60px auto;
            border: 1px solid #e0e0e0;
            padding: 0;
            box-sizing: border-box;
        }

        .register-header {
            background-color: #007bff;
            color: white;
            text-align: center;
            padding: 12px 0;
            font-size: 18px;
            font-weight: bold;
        }

        .register-form {
            padding: 30px;
        }

        .form-group {
            margin-bottom: 18px;
        }

            .form-group label {
                display: block;
                margin-bottom: 6px;
                font-size: 14px;
                color: #333;
            }

            .form-group input {
                width: 100%;
                padding: 8px 10px;
                border: 1px solid #ced4da;
                border-radius: 0;
                box-sizing: border-box;
                font-size: 14px;
            }

        .register-btn {
            width: 100%;
            background-color: #007bff;
            color: white;
            border: none;
            padding: 10px 0;
            font-size: 14px;
            cursor: pointer;
        }

        .login-link {
            text-align: center;
            margin-top: 15px;
            font-size: 13px;
            color: #666;
        }

            .login-link a {
                color: #007bff;
                text-decoration: none;
            }

        .footer {
            text-align: center;
            margin-top: 50px;
            font-size: 12px;
            color: #666;
        }

        .result-msg {
            text-align: center;
            margin-bottom: 15px;
            font-size: 13px;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <!-- 顶部导航栏：修正“首頁”链接，指向登录界面 -->
    <div class="top-bar">
        <h1>IDC巡檢系統</h1>
        <nav>
            <a href="#">系統管理</a>
            <!-- 核心修改：点击首頁直接返回登录页 -->
            <a href="@Url.Action("Login", "Account")">首頁</a>
            <a href="#">退出登入</a>
        </nav>
    </div>

    <!-- 注册表单容器 -->
    <div class="register-container">
        <div class="register-header">用戶註冊</div>
        <div class="register-form">
            <form method="post">
                <!-- 用户名 -->
                <div class="form-group">
                    <label>使用者名稱</label>
                    <input type="text" name="userName" placeholder="請輸入使用者名稱" required>
                </div>

                <!-- 密码 -->
                <div class="form-group">
                    <label>密碼</label>
                    <input type="password" name="password" placeholder="請輸入密碼" required>
                </div>

                <!-- 邮箱 -->
                <div class="form-group">
                    <label>郵箱</label>
                    <input type="email" name="email" placeholder="請輸入有效郵箱" required>
                </div>

                <!-- 注册结果提示：成功绿色，失败红色 -->
                @if (!string.IsNullOrEmpty(ViewBag.ResultMsg))
                {
                    <div class="result-msg" style="color: @(ViewBag.ResultMsg.Contains("成功") ? "green" : "red")">
                        @ViewBag.ResultMsg
                    </div>
                }

                <!-- 注册按钮 -->
                <button type="submit" class="register-btn">註冊</button>

                <!-- 登录链接：跳转回登录页 -->
                <div class="login-link">
                    已有賬號？<a href="@Url.Action("Login", "Account")">點擊登入</a>
                </div>
            </form>
        </div>
    </div>

    <!-- 页脚：和登录页保持一致 -->
    <div class="footer">
        © 2026 - IDC巡檢系統 - <a href="#" style="color: #007bff; text-decoration: none;">Privacy</a>
    </div>
</body>
</html>